<h1> <%=@current_user.spotify_user_id%>'s archived playlists </h1>

<%= @tracks%>

<table border="1">
<tr>
  <th>
    playlist art
  </th>
  <th>
    playlist name
  </th>
  <th>
    full playlist
  </th>
  <th>
    date archived
  </th>
  <th>
    date last updated
  </th>
</tr>

<%@playlists = @current_user.playlists%>

  <% @playlists.each do |playlist|%>
    <tr>
      <% if playlist.artwork != nil%>
        <td><img src = <%= playlist.artwork%> alt = "image artwork for playlist" width = 200 height = 200></td>
      <%end%>
      <td><%= playlist.title%></td>
      <td><a href = "playlist_archive/<%= playlist.id%>">full playlist</a></td>
      <td> <%=playlist.created_at.strftime("%b %e, %Y")%> </td>
      <td> <%=time_ago_in_words(playlist.updated_at)%> ago </th>
    </tr>
  <%end%>

</table>
