<div>
  <div>
    <h1>
      List of all playlists
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new playlist
    </h2>

    <form action="/insert_playlist" method="post">
      <div>
        <label for="playlist_id_box">
          Playlist
        </label>

        <input type="text" id="playlist_id_box" name="query_playlist_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="playlist_url_box">
          Playlist url
        </label>

        <input type="text" id="playlist_url_box" name="query_playlist_url">
      </div>

      <div>
        <label for="deleted_at_box">
          Deleted at
        </label>

        <input type="datetime-local" id="deleted_at_box" name="query_deleted_at">
      </div>

      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="artwork_box">
          Artwork
        </label>

        <input type="text" id="artwork_box" name="query_artwork">
      </div>

      <button>
        Create playlist
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Playlist
        </th>

        <th>
          User
        </th>

        <th>
          Playlist url
        </th>

        <th>
          Deleted at
        </th>

        <th>
          Title
        </th>

        <th>
          Artwork
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_playlists.each do |a_playlist| %>
      <tr>
        <td>
          <%= a_playlist.id %>
        </td>

        <td>
          <%= a_playlist.playlist_id %>
        </td>

        <td>
          <%= a_playlist.user_id %>
        </td>

        <td>
          <%= a_playlist.playlist_url %>
        </td>

        <td>
          <%= a_playlist.deleted_at %>
        </td>

        <td>
          <%= a_playlist.title %>
        </td>

        <td>
          <%= a_playlist.artwork %>
        </td>

        <td>
          <%= time_ago_in_words(a_playlist.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_playlist.updated_at) %> ago
        </td>

        <td>
          <a href="/playlists/<%= a_playlist.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
