<div>
  <div>
    <h1>
      List of all tracks
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new track
    </h2>

    <form action="/insert_track" method="post">
      <div>
        <label for="title_box">
          Title
        </label>

        <input type="text" id="title_box" name="query_title">
      </div>

      <div>
        <label for="artist_id_box">
          Artist
        </label>

        <input type="text" id="artist_id_box" name="query_artist_id">
      </div>

      <div>
        <label for="release_date_box">
          Release date
        </label>

        <input type="datetime-local" id="release_date_box" name="query_release_date">
      </div>

      <div>
        <label for="playlist_id_box">
          Playlist
        </label>

        <input type="text" id="playlist_id_box" name="query_playlist_id">
      </div>

      <button>
        Create track
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Title
        </th>

        <th>
          Artist
        </th>

        <th>
          Release date
        </th>

        <th>
          Playlist
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_tracks.each do |a_track| %>
      <tr>
        <td>
          <%= a_track.id %>
        </td>

        <td>
          <%= a_track.title %>
        </td>

        <td>
          <%= a_track.artist_id %>
        </td>

        <td>
          <%= a_track.release_date %>
        </td>

        <td>
          <%= a_track.playlist_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_track.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_track.updated_at) %> ago
        </td>

        <td>
          <a href="/tracks/<%= a_track.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
